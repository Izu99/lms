# Server Configuration
PORT=5000

# Database Configuration
# IMPORTANT: Never commit actual credentials
# Use strong passwords and rotate them regularly
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Client Configuration
CLIENT_ORIGIN=http://localhost:3000

# Production URLs (set in deployment platform)
PRODUCTION_CLIENT_URL=https://your-production-domain.com
VERCEL_CLIENT_URL=https://your-vercel-deployment-url.com
# PRODUCTION_API_URL=https://api.yourdomain.com

# Optional: Email Configuration (for future features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Optional: File Upload Limits
MAX_FILE_SIZE=10485760
# 10MB in bytes

# PayHere Sandbox Credentials
PAYHERE_MERCHANT_ID=12345
PAYHERE_MERCHANT_SECRET=123456
PAYHERE_SANDBOX=true
